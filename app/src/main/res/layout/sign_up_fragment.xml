<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.signup.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sign up with Treflor"
                    android:textColor="#000"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:layout_marginBottom="@dimen/ef_margin_small">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile_picture"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="20dp"
                        android:src="@drawable/profile_pic" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/img_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/ef_margin_medium"
                        android:layout_marginBottom="@dimen/ef_margin_medium"
                        android:alpha="0.9"
                        android:clickable="false"
                        android:src="@drawable/ic_edit_white_24dp"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="6dp"
                        app:fabCustomSize="30dp"
                        app:fabSize="mini"
                        app:maxImageSize="20dp" />

                </RelativeLayout>>

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:layout_marginBottom="@dimen/ef_margin_small"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/TextClr"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/TextClr"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/txt_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="@color/TextClr"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/txt_given_name"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="First name"
                    android:inputType="text"
                    android:textColor="@color/TextClr"
                    android:textSize="14sp"/>


                <EditText
                    android:id="@+id/txt_family_name"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="Last name"
                    android:inputType="text"
                    android:textColor="@color/TextClr"
                    android:textSize="14sp"/>

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:textColor="@color/TextClr"
                    android:textSize="14sp"/>

                <DatePicker
                    android:id="@+id/birthday_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/ef_margin_small"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="SIGN UP" />

                <TextView
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ef_margin_medium"
                    android:fontFamily="@font/roboto_medium"
                    android:linksClickable="true"
                    android:text="Already have an account?"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="12sp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>